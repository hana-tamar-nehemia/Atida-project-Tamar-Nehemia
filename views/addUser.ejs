<%- include("partials/header") %>

<h1>enter new user</h1>

<form action="/addUser" method="post">
  <div class="form-group">
    <label>Full name</label>
    <input
      type="text"
      pattern="\w+\s\w+"
      class="form-control"
      name="userName"
      id="userName"
      required
    />
  </div>

  <div class="form-group">
    <label>id number</label>
    <input
      type="text"
      class="form-control"
      name="userId"
      type="number"
      maxlength="9"
      minlength="9"
      required
    />
  </div>

  <div class="form-group">
    <label>address</label>
    <input
      type="text"
      onkeydown="return /[a-z]/i.test(event.key)"
      id=""
      maxlength="20"
      name="city"
      placeholder="city"
      required
    />
    <input
      onkeydown="return /[a-z]/i.test(event.key)"
      type="text"
      id=""
      name="street"
      maxlength="20"
      placeholder="street"
      required
    />
    <input
      type="number"
      name="numberHome"
      maxlength="3"
      placeholder="home number"
      required
    />
  </div>

  <div class="form-group">
    <label>date of birth</label>
    <input
      type="date"
      id="birthDate"
      name="birthDate"
      max="3000-01-01"
      onfocus="this.max=new Date().toISOString().split('T')[0]"
      required
    />
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input
      type="text"
      pattern="0([2347]{1})([-]{0,1})\d{7}"
      class="form-control"
      name="phone"
      maxlength="10"
      minlength="9"
      placeholder="02/03/04/07-______"
    />
  </div>
  <div class="form-group">
    <label>Cell phone</label>
    <input
      type="text"
      pattern="05([023458]{1})([-]{0,1})\d{7}"
      maxlength="10"
      minlength="9"
      class="form-control"
      name="cellPhone"
      placeholder="05_-_______"
      required
    />
  </div>

  <div class="form-group">
    <label>Date of first vaccination:</label>
    <input
      type="date"
      max="3000-01-01"
      onfocus="this.max=new Date().toISOString().split('T')[0]"
      id="DateVfvaccination1"
      name="DateVfvaccination1"
    />
    <label>manufacturer of first vaccination: </label>
    <select class="myDropdown" name="manufacturer1">
      <option disabled selected value>-- select an option --</option>
      <option value="a">a</option>
      <option value="b">b</option>
      <option value="c">c</option>
    </select>
  </div>
  <div class="form-group">
    <label>Date of second vaccination: </label>
    <input
      type="date"
      max="3000-01-01"
      onfocus="this.max=new Date().toISOString().split('T')[0]"
      id="DateVfvaccination2"
      name="DateVfvaccination2"
    />
    <label>manufacturer of second vaccination: </label>
    <select class="myDropdown" name="manufacturer2">
      <option disabled selected value>-- select an option --</option>
      <option value="a">a</option>
      <option value="b">b</option>
      <option value="c">c</option>
    </select>
  </div>
  <div class="form-group">
    <label>Date of third vaccination: </label>
    <input
      type="date"
      max="3000-01-01"
      onfocus="this.max=new Date().toISOString().split('T')[0]"
      id="DateVfvaccination3"
      name="DateVfvaccination3"
    />
    <label>manufacturer of third vaccination: </label>
    <select class="myDropdown" name="manufacturer3">
      <option disabled selected value>-- select an option --</option>
      <option value="a">a</option>
      <option value="b">b</option>
      <option value="c">c</option>
    </select>
  </div>
  <div class="form-group">
    <label>Date of fourth vaccination: </label>
    <input
      type="date"
      max="3000-01-01"
      onfocus="this.max=new Date().toISOString().split('T')[0]"
      id="DateVfvaccination4"
      name="DateVfvaccination4"
    />
    <label>manufacturer of fourth vaccination: </label>
    <select class="myDropdown" name="manufacturer4">
      <option disabled selected value>-- select an option --</option>
      <option value="a">a</option>
      <option value="b">b</option>
      <option value="c">c</option>
    </select>
  </div>

  <div class="form-group">
    <label>Corona start date:</label>
    <input
      type="date"
      max="3000-01-01"
      onfocus="this.max=new Date().toISOString().split('T')[0]"
      id="startCoronaDate"
      name="startCoronaDate"
    />
  </div>
  <div class="form-group">
    <label>recovery date</label>
    <input type="date" name="recoveryCoronaDate" />
  </div>
  <button id="submitAddUser" type="submit" class="btn btn-primary">
    Submit
  </button>
</form>

